@page "/catalog/{productId::int}/details"
@model Online_Shop.UI.Pages.DetailsModel
@{
    ViewData["Title"] = @Model.ItemModel.Name;
}
@section Styles {
    <link href="@Url.Content("~/css/product.css")" rel="stylesheet" type="text/css" />
}

<div class="product_info">
    <figure class="zoom">
        <img src="@Model.ItemModel.ImageUrls.First()" alt="Изображение товара" class="product_photo" id="product-image" />
    </figure>
    <div class="characteristics">
        <h1 id="product-title"></h1>
        <p class="product_price">Цена:</p>
        <p class="product_price" id="product-price-value">@Model.ItemModel.Price p</p>
        <button class="price_btn">
            Добавить в корзину
        </button>
    </div>
</div>

<div class="product_text_section">
    <h2>Описание @Model.ItemModel.Name:</h2>
    <p id="description">@Model.ItemModel.Description</p>
    <h2>Характеристики @Model.ItemModel.Name:</h2>
    <p id="characteristics"></p>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Модель</th>
            <td>@Model.ItemModel.Name</td>
        </tr>
        <tr>
            <th>Операционная система</th>
            <td>Windows 10</td>
        </tr>
        <tr>
            <th>Оперативная память (RAM)</th>
            <td>16 ГБ</td>
        </tr>
        <tr>
            <th>Графический контроллер</th>
            <td>GeForce GTX 1650 4GB</td>
        </tr>
        <tr>
            <th>Объем SSD</th>
            <td>512 ГБ</td>
        </tr>
        <tr>
            <th>Работа от аккумулятора</th>
            <td>до 7 часов</td>
        </tr>
        <tr>
            <th>Диагональ экрана</th>
            <td>15.6"(39.6 см)</td>
        </tr>
    </tbody>
</table>

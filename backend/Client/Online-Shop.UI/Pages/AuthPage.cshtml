@page "/login"
@model Online_Shop.UI.Pages.AuthPageModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />
    <title>Вход</title>
    <link href="@Url.Content("~/css/auth.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="main">
        <div class="log-reg" id="tab-selector">
            <h2 class="log active" id="login-tab">Вход</h2>
            <h2 class="reg inactive" id="register-tab">Регистрация</h2>
        </div>
        
        <form id="form-login">
            <label for="email">Логин:</label>
            <input type="email"
                   id="email"
                   name="email"
                   placeholder="Введите логин"
                   required />

            <label for="password">Пароль:</label>
            <input type="password"
                   id="password"
                   name="password"
                   placeholder="Введите пароль"
                   required />

            <div class="btns">
                <button class="login-btn" id="submit">
                    Войти
                </button>
                <p><a href="~/catalog" class="link-guest">Продолжить как гость</a></p>
            </div>
            
        </form>

        <form id="form-register">
            <label for="email">Логин:</label>
            <input type="email"
                   id="email"
                   name="email"
                   placeholder="Введите логин"
                   required />

            <label for="email">Почта:</label>
            <input type="email"
                   id="email"
                   name="email"
                   placeholder="Введите почту"
                   required />

            <label for="password">Пароль:</label>
            <input type="password"
                   id="password"
                   name="password"
                   placeholder="Введите пароль"
                   required />

            <label for="password">Повторите пароль:</label>
            <input type="password"
                   id="password"
                   name="password"
                   placeholder="Повторите пароль"
                   required />

            <div class="btns">
                <button class="register-btn" id="submit">
                    Зарегистрироваться
                </button>
                <p><a href="~/catalog" class="link-guest">Продолжить как гость</a></p>
            </div>

        </form>
    </div>
</body>
<script>
    const loginTab = document.getElementById("login-tab");
    const registerTab = document.getElementById("register-tab");
    const formLogin = document.getElementById("form-login");
    const formRegister = document.getElementById("form-register");

    // Initially, show the login form and set colors accordingly
    formLogin.style.display = "block";

    loginTab.addEventListener("click", () => {
        formLogin.style.display = "block";
        formRegister.style.display = "none";
        loginTab.classList.add("active");
        loginTab.classList.remove("inactive");
        registerTab.classList.add("inactive");
        registerTab.classList.remove("active");
    });

    registerTab.addEventListener("click", () => {
        formRegister.style.display = "block";
        formLogin.style.display = "none";
        registerTab.classList.add("active");
        registerTab.classList.remove("inactive");
        loginTab.classList.add("inactive");
        loginTab.classList.remove("active");
    });
</script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $('#form').submit(function (e) {
            e.preventDefault();
        });
    }
    );
    var apiOptions = @Json.Serialize(@Model.ApiGateway);
</script>
<script src="~/js/login/login.js"></script>
</html>

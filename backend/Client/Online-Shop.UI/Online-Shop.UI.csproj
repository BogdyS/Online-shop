  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\OnlineShop.HttpClients\OnlineShop.HttpClients.csproj" />
  </ItemGroup>
	<ItemGroup>
		<None Include="wwwroot\**">
